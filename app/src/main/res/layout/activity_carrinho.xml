<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paginas.CarrinhoActivity"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout

        android:background="@color/colorPrimaryDark"
        android:id="@+id/LayoutTopo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/NomeTopo"
            android:paddingLeft="10dp"
            android:textColor="@color/corBranca"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrinho"/>
        <TextView
            android:background="@drawable/corner_butao"
            android:id="@+id/totalPedido"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00,00"
            />
        <Space
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/apagarItem"
            android:visibility="invisible"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/ic_delete"
            android:background="@drawable/corner_butao"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="Apagar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/LayoutTopEntrega"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/LegendaEntrega"
            android:paddingLeft="10dp"
            android:textColor="@color/corBranca"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forma de entrega"/>

        <Space
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <TextView
            android:background="@drawable/corner_butao"
            android:id="@+id/LegendaNome"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome"
            />
        <Button
            android:onClick="eventEditarNome"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/editarNome"
            android:visibility="gone"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:background="@android:drawable/ic_menu_manage"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/LayoutCentro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:visibility="visible"
            android:id="@+id/lista_itens_carrinho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent" />

        <FrameLayout
            android:background="@color/colorAccent"
            android:visibility="gone"
            android:id="@+id/fragment_conteudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/layoutLocal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:background="@drawable/fundo_soliciata_permissao"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textColor="@color/corBranca"
                android:paddingLeft="30dp"
                android:paddingRight="8dp"
                android:drawableRight="@android:drawable/ic_dialog_map"
                android:minWidth="180dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/borda_butao_confirme"
                android:layout_gravity="bottom|center"
                android:onClick="OnPermitirLocal"
                android:textAlignment="center"
                android:text="Permitir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textColor="@color/colorAccent"
                android:minWidth="180dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/corner_butao_negative"
                android:layout_gravity="bottom|center"
                android:onClick="OnUsarEndereco"
                android:textAlignment="center"
                android:text="Usar endereço"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/LayoutNome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/textNome"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_perfil"
            android:background="@color/corBranca"
            android:layout_gravity="center"
            android:hint="Digite seu nome"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Space
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:layout_height="40dp"/>
        <Button
            android:textColor="@color/corBranca"
            android:layout_marginLeft="10dp"
            android:id="@+id/salvarNome"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/corner_butao_verde"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:text="Salvar"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/LayoutBaixo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:paddingEnd="30dp"
            android:textSize="14dp"
            android:id="@+id/additens"
            android:onClick="eventFechar"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_voltar_frag"
            android:background="@drawable/borda_secundario"
            android:layout_gravity="center"
            android:text="Adicionar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Space
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:layout_height="40dp"/>
        <Button
            android:paddingStart="30dp"
            android:textColor="@color/corBranca"
            android:id="@+id/finalizarCarrinho"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="14dp"
            android:drawableRight="@drawable/ic_proximo"
            android:background="@drawable/borda_butao"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="Finalizar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/LayoutBaixoEntrga"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:paddingEnd="30dp"
            android:textSize="14dp"
            android:id="@+id/addendereco"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_endereco"
            android:background="@drawable/borda_secundario"
            android:layout_gravity="center"
            android:text="Endereço"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Space
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:layout_height="40dp"/>
        <Button
            android:paddingStart="30dp"

            android:textColor="@color/corBranca"
            android:textSize="14dp"
            android:id="@+id/confirmarLocal"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_botao_marcador"
            android:background="@drawable/borda_butao"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="Confirmar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>