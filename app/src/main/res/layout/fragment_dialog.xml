<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SheetEnviar"
    android:background="@drawable/borda_butao_negative"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:visibility="visible"
    android:id="@+id/linearConteudo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:textColor="#323330"
            android:layout_marginTop="10dp"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Precisamos verificar o numero:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:textColor="#323330"
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/corBranca"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="77999201204"
            android:textAlignment="center"
            android:textSize="24dp"
            android:typeface="sans" />

        <TextView
            android:textColor="#323330"
            android:id="@+id/txResumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/corBranca"
            android:padding="10dp"
            android:text="Será enviado um SMS para seu celular. O número está correto ou dejeja edita-lo?"
            android:textSize="17dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/carregando"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar

            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:foregroundTint="#FFFFFF" />
    </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:id="@+id/linearBotoes"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/BtEditar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/borda_butao_negative"
            android:gravity="center"
            android:minWidth="130dp"
            android:maxWidth="150dp"
            android:text="Editar"
            android:textColor="@color/corVerde"
            android:textSize="20sp" />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/BtEnviar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/borda_butao_confirme"
            android:gravity="center"
            android:minWidth="130dp"
            android:maxWidth="150dp"
            android:text="Correto"
            android:textColor="@color/corBranca"
            android:textSize="20sp" />    </LinearLayout>


</LinearLayout>