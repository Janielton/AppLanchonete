<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/nova_acao"
    android:layout_margin="20dp"
    android:minWidth="300dp"
    android:layout_gravity="center"
    >
<LinearLayout
    android:background="@color/corVerde"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Space
        android:background="@color/corIcones"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:fontFamily="@font/insanibu"
        android:padding="6dp"
        android:textColor="@color/corVerde"
        android:background="@color/corIcones"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="App Mania"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:layout_gravity="end"
        android:textColor="#fff"
        android:background="@drawable/ic_close"
        android:id="@+id/closedialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        /></LinearLayout>
    <LinearLayout

        android:padding="10dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:background="@color/corCinza"
        android:id="@+id/produtoNovo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textprincial"
            android:textSize="20sp"
            android:textColor="@color/corIcones"
            android:text="@string/app_mania_resumo"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btContato"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/insanibu"
            android:minWidth="150dp"
            android:background="@drawable/borda_butao_confirme"
            android:text="Contato"
            android:textColor="@color/corBranca"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>



</LinearLayout>