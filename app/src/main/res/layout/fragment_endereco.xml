<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corIcones"
    tools:context=".fragments.EnderecoFragment">
    <TextView
        android:id="@+id/TextTopo"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textColor="@color/corBranca"
        android:text="Informe seu endereço"
        android:textAlignment="center"
        android:textSize="22sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Spinner
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/corner_butao"
            android:entries="@array/cidades"
            android:id="@+id/spinnerCidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <EditText
            android:hint="Rua"
            android:id="@+id/editTextRua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corner_butao"
            android:ems="16"
            android:inputType="text"
            android:padding="12dp" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <EditText
            android:hint="Bairro"
            android:layout_weight="1"
            android:id="@+id/editTextBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corner_butao"
            android:inputType="text"
            android:padding="12dp"  />
        <EditText
            android:textAlignment="center"
        android:hint="Número"
        android:id="@+id/editTextNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/corner_butao"
        android:inputType="number"
            android:padding="12dp"  />

</LinearLayout>
        <EditText
            android:hint="Ponto de referência"
            android:id="@+id/editTextReferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corner_butao"
            android:ems="16"
            android:inputType="text"
            android:padding="12dp"  />
    </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:textColor="@color/corBranca"
            android:minWidth="150dp"
            android:background="@color/colorPrimary"
            android:text="Salvar"
            android:id="@+id/salvarEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>