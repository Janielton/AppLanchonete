<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paginas.PaginaInicio"
    android:id="@+id/drawer_tab"
    android:background="@drawable/fundo_min"

    >
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/content_tabmenu"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:padding="5dp"
        app:itemIconPadding="20dp"
        app:itemHorizontalPadding="10dp"
        app:itemShapeInsetTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/corCinza"
        android:backgroundTint="@color/corCinza"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_tabmenu"
        app:itemBackground="@color/corBranca"
        app:itemIconTint="@color/corIcones"
        app:itemTextColor="@color/corIcones"
        app:menu="@menu/nav_tabmenu" />

</androidx.drawerlayout.widget.DrawerLayout>