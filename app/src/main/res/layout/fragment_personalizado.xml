<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/corCinza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.TabLanches" >
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/LayAdd"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="Valor: "
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/ValortotralAdd"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="00,00" />
        <Button
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/BtOkAdd"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pronto"
            android:textColor="@color/corBranca"
            android:background="@drawable/borda_butao"
            android:layout_width="wrap_content"
            android:layout_height="33dp"/>
    </LinearLayout>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:id="@+id/CardPedido"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="35dp"
    app:contentPadding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LinearPerson"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PersonaText"
                android:textColor="@color/corIcones"
                android:fontFamily="@font/insanibu"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Personalizado #1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/processoBar"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ExpandableListView
         android:visibility="gone"
        android:divider="@color/corRoxoClaro"
        android:padding="10dp"
        android:animateLayoutChanges="true"
        android:indicatorRight="40dp"
        android:indicatorLeft="0dp"
        android:minHeight="200dp"
        android:dividerHeight="3px"
        android:transitionGroup="true"
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ExpandableListView>
        <ListView
            android:layout_weight="1"
            android:id="@+id/listSelecao"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/LinerAcrescenta"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxWidth="100dp"
                    android:minWidth="200dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMenos"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_remove_circle"

                        />

                    <EditText
                        android:textColor="@color/corIcones"
                        android:enabled="false"
                        android:id="@+id/editTextQuantidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number|textPersonName"
                        android:text="1"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/buttonMais"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_add_circle"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout></androidx.cardview.widget.CardView>
</LinearLayout>